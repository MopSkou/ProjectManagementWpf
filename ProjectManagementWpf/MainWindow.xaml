<Window x:Class="ProjectManagementWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagementWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="510" Width="1020" Background="LightSkyBlue"
        ResizeMode="NoResize">
    <Grid>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="0.5*"/>
        <RowDefinition Height="5*"/>
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Margin="0">
        

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                    
                        
                        <Button x:Name="BtnMenu" Width="50" Height="50"  
     Click="Log_Click" Style="{StaticResource BorderlessButton}"
    HorizontalAlignment="Right" >
                        <Image Source="/Images/BackBtn.png" Stretch="Fill"/>
                    </Button>
                        
                </StackPanel>
    </StackPanel>
</Grid>
    </Grid>
</Window>
