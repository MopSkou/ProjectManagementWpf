<Page x:Class="ProjectManagementWpf.Pages.Add.AddDoljnostiPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectManagementWpf.Pages.Add"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="400"
      Title="AddDoljnostiPage" Background="LightSkyBlue">

    <Grid >
        <StackPanel Margin="10" Orientation="Vertical"
            VerticalAlignment="Center" Height="200" Width="300">

            <Label Content="Должность" FontSize="15" Foreground="Black" FontWeight="Bold"/>
            <TextBox Name="PostTextBox" Width="300" Height="20"/>

            <Label Content="Пароль" FontSize="15" Foreground="Black" FontWeight="Bold" />
            <PasswordBox Name="PasswordBox" Width="300" Height="20"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0" Background="WhiteSmoke" Foreground="Black" FontWeight="Bold" FontSize="15" Width="100"/>
            <Button Content="Назад" Click="BackButton_Click" Margin="0,10,0,0" Background="WhiteSmoke" Foreground="Black" FontWeight="Bold" FontSize="15" Width="100"/>
        </StackPanel>
    </Grid>
</Page>