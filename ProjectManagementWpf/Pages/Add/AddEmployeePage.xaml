<Page x:Class="ProjectManagementWpf.Pages.Add.AddEmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectManagementWpf.Pages.Add"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="400"
      Title="AddEmployeePage" Background="LightSkyBlue">
    <Grid>
        <StackPanel Margin="10" Orientation="Vertical"
            VerticalAlignment="Center" Height="300" Width="300">

            <Label Content="Имя" FontSize="15" Foreground="Black" FontWeight="Bold"/>
            <TextBox Name="FirstNameTextBox"  Width="300" Height="20"/>

            <Label Content="Фамилия" FontSize="15" Foreground="Black" FontWeight="Bold"/>
            <TextBox Name="LastNameTextBox"  Width="300" Height="20"/>

            <Label Content="Отчество" FontSize="15" Foreground="Black" FontWeight="Bold"/>
            <TextBox Name="MiddleNameTextBox"  Width="300" Height="20"/>

            <Label Content="Email" FontSize="15" Foreground="Black" FontWeight="Bold"/>
            <TextBox Name="EmailTextBox"  Width="300" Height="20"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0" Background="WhiteSmoke" Foreground="Black" FontWeight="Bold" FontSize="15" Width="100"/>
            <Button Content="Назад" Click="BackButton_Click" Margin="0,10,0,0" Background="WhiteSmoke" Foreground="Black" FontWeight="Bold" FontSize="15" Width="100"/>
            </StackPanel>
        </Grid>
    </Page>