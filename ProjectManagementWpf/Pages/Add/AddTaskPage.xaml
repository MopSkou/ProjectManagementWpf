<Page x:Class="ProjectManagementWpf.Pages.Add.AddTaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectManagementWpf.Pages.Add"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="AddTaskPage" Background="LightSkyBlue">

    <Grid>
        <StackPanel Margin="10" Orientation="Vertical"
            VerticalAlignment="Center" Height="390" Width="300">
            <Label Content="Название задачи" FontSize="12" Foreground="Black" FontWeight="Bold"/>
            <TextBox Name="TaskNameTextBox" Width="300" Height="20"/>

            <Label Content="Автор ID" FontSize="12" Foreground="Black" FontWeight="Bold"/>
            <TextBox Name="AuthorIDTextBox" Width="300" Height="20"/>

            <Label Content="Исполнитель ID" FontSize="12" Foreground="Black" FontWeight="Bold"/>
            <TextBox Name="PerformerIDTextBox" Width="300" Height="20"/>

            <Label Content="Проект ID" FontSize="12" Foreground="Black" FontWeight="Bold"/>
            <TextBox Name="ProjectIDTextBox" Width="300" Height="20"/>

            <Label Content="Статус" FontSize="12" Foreground="Black" FontWeight="Bold"/>
            <TextBox Name="StatusTextBox" Width="300" Height="20"/>

            <Label Content="Комментарий" FontSize="12" Foreground="Black" FontWeight="Bold"/>
            <TextBox Name="CommentTextBox" Width="300" Height="20"/>

            <Label Content="Приоритет" FontSize="12" Foreground="Black" FontWeight="Bold"/>
            <TextBox Name="PriorityTextBox" Width="300" Height="20"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0" Background="WhiteSmoke" Foreground="Black" FontWeight="Bold" FontSize="15" Width="100"/>
            <Button Content="Назад" Click="BackButton_Click" Margin="0,10,0,0" Background="WhiteSmoke" Foreground="Black" FontWeight="Bold" FontSize="15" Width="100"/>
        </StackPanel>
    </Grid>
</Page>